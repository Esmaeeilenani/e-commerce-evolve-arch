<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet id="004-create-cart-item-table" author="Esmaeeil ENani">
        <createTable tableName="cart_item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false" />
            </column>
            <column name="color" type="VARCHAR(255)" />
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="fk_product_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="001-add-cart-item-column" author="Esmaeeil Enani">
        <addColumn tableName="cart_item">
            <column name="fk_cart_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
